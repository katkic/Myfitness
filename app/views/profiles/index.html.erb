<div class="main-container">
  <h1 class="page-title mb-2">ユーザー一覧</h1>
  <%= link_to '戻る', :back, class: 'btn btn-outline-secondary mb-4' %>

  <%= render 'partial/search_user' %>

  <div class="profiles-container mt-3">
    <% @users.each do |user| %>
      <div class="profile-content">
        <div class="profile-header">
          <!-- ユーザー情報 -->
          <%= render 'partial/user_name_and_icon', user: user %>
          <%= render 'partial/follow_form', user: user unless user.id == current_user.id %>
        </div><!-- /.profile-header -->

        <%= render 'partial/self_introduction', user: user %>
      </div><!-- /.content-header -->
    <% end %>
  </div><!-- /.profiles-container -->

  <div class="mt-3">
    <%= paginate(@users) %>
    <%= page_entries_info(@users) %>
  </div><!-- /.mt-3 -->
</div><!-- /.main-container -->
