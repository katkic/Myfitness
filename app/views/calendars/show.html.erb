<div class="calendar-container mt-3">
  <h1 class="page-title">カレンダー</h1>

  <% if controller.controller_name == 'menus'%>
    <h2 class="calendar_name"><%= current_user.name %></h2>
  <% else %>
    <h2 class="calendar_name"><%= @user.name %></h2>
  <% end %>

  <div class="mt-3">
    <%= month_calendar attribute: :created_at, events: @workouts do |date, workouts| %>
      <%= date.day %>

      <% workouts.each do |workout| %>
        <div class="calendar_exerdise_names">
          <%= link_to workout.exercise.name, workout_path(workout) %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="mt-3">
    <%= link_to '戻る', :back, class: 'btn btn-outline-secondary' %>
  </div>
</div><!-- /.container -->
