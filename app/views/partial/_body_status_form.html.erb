<nav class="navbar navbar-expand-sm my-3">
    <ul class="navbar-nav">
      <li class="nav-item"><%= link_to '一覧', body_statuses_path(body_status), class: 'nav-link btn btn-default' %></li>
      <li class="nav-item"><%= link_to 'トレーニングメニュー', menus_path, class: 'nav-link btn btn-default' %></li>
    </ul>
  </nav>

  <%= form_with model: body_status, html: { multipart: true }, local: true do |f| %>
    <% if body_status.errors.any? %>
      <div id="error_explanation" class="mb-4">
        <h2><%= pluralize(body_status.errors.count, "") %> 件のエラーがあります</h2>
        <ul>
          <% body_status.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div><!-- /.error_explanation -->
    <% end %>

    <div class="form-group">
      <%= f.label :created_at, '測定日' %><br>
      <%= f.datetime_select :created_at, {}, value: Time.now.strftime("%Y-%m-%d") %>
    </div><!-- /.form-group -->

    <div class="form-group mt-4">
      <%= f.label :body_weight %>
      <%= f.number_field :body_weight, min: 0, max:150, step:0.1, class: 'form-control' %>
    </div><!-- /.form-group -->

    <div class="form-group">
      <%= f.label :body_fat %>
      <%= f.number_field :body_fat, min: 0, max:50, step:0.1, class: 'form-control' %>
    </div><!-- /.form-group -->

    <div class="form-group mb-4">
      <i class="far fa-image fa-lg"></i>
      <%= f.label :picture1 %><br>
      <p><%= image_tag @body_status.picture1.url(:thumb), alt: '写真1' if @body_status.picture1 && @body_status.picture1.url %></p>
      <%= f.file_field :picture1, accept: '.jpg, .png, .gif' %>
    </div><!-- /.form-group -->

    <div class="form-group mb-4">
      <i class="far fa-image fa-lg"></i>
      <%= f.label :picture2 %><br>
      <p><%= image_tag @body_status.picture2.url(:thumb), alt: '写真2' if @body_status.picture2 && @body_status.picture2.url %></p>
      <%= f.file_field :picture2, accept: '.jpg, .png, .gif' %>
    </div><!-- /.form-group -->

    <div class="form-group mb-4">
      <i class="far fa-image fa-lg"></i>
      <%= f.label :picture3 %><br>
      <p><%= image_tag @body_status.picture3.url(:thumb), alt: '写真3' if @body_status.picture3 && @body_status.picture3.url %></p>
      <%= f.file_field :picture3, accept: '.jpg, .png, .gif' %>
    </div><!-- /.form-group -->

    <div class="form-group">
      <%= f.submit class: 'btn btn-primary' %>
    </div><!-- /.form-group -->
  <% end %>

