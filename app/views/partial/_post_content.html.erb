<div class="main-content">
  <div class="content-header">
    <!-- ユーザー情報 -->
    <p><%= image_tag set_icon(post.user.profile), alt: post.user.name, class: 'cover50' %></p>
    <div class="post-names">
      <p class="post-user"><%= post.user.name %></p>
      <p class="post-time"><%= post.created_at.strftime('%Y-%m-%d %H:%M') %></p>
    </div>
    <!-- 詳細表示リンク -->
      <%= link_to content_tag(:i, '', class: 'fas fa-info-circle fa-1_5x fa-fw mr-2'), post_path(post) %>

    <% if post.user.id == current_user.id %>
      <div class="post-icons">
        <!-- 編集リンク -->
        <%= link_to content_tag(:i, '', class: 'fas fa-edit fa-1_5x fa-fw'), edit_post_path(post) %>
        <!-- 削除リンク -->
        <%= link_to content_tag(:i, '', class: 'fas fa-trash-alt fa-1_5x fa-fw'), post_path(post), method: :delete, data: { confirm: '投稿を削除してもよろしいですか？ '} %>
      </div><!-- /.post-icons -->
    <% end %>
  </div><!-- /.content-header -->

  <div class="content-body">
    <p class="post-content"><%= post.content %></p>
  </div><!-- /.content-body -->

    <div class="content-footer">
      <!-- いいね, コメントアイコン -->
      <div class="post-icons">
        <!-- いいね機能 -->
        <% if @like.present? %>
          <!-- いいね解除 -->
          <div class="post-item">
            <%= link_to content_tag(:i, '', class: 'fas fa-heart fa-1_5x fa-fw favorite-icon'), like_path(id: @like.id), method: :delete %>
            <%= post.like_users.count if post.like_users.count > 0 %>
          </div><!-- /.post-icon -->
        <% else %>
          <!-- いいね登録 -->
          <div class="post-item">
            <%= link_to content_tag(:i, '', class: 'far fa-heart fa-1_5x fa-fw'), likes_path(post_id: post.id), method: :post %>
            <%= post.like_users.count if post.like_users.count > 0 %>
          </div><!-- /.post-item -->
        <% end %>

        <!-- コメント機能 -->
        <div class="post-item">
          <%= link_to content_tag(:i, '', class: 'far fa-comment fa-1_5x fa-fw comment'), new_post_comment_path(post_id: post.id) %>
          <%= post.comment_users.count if post.comment_users.count > 0 %>
        </div><!-- /.post-tem -->
      </div><!-- /.post-icon -->
    </div><!-- /.content-footer -->
</div><!-- /.main-content -->
