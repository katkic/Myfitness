<%= link_to profile_path(user) do %>
  <p><%= image_tag set_image(user.profile.icon, 'default_user_icon.png'), alt: user.name, class: 'cover50 mr-2' %>
<% end %>

<% if user.profile.public_flag %>
  <%= link_to profile_path(user) do %>
    <p class="post-user profile-name"><%= link_to user.name, profile_path(user), class: 'post-user' %></p>
  <% end %>
<% else %>
  <p class="post-user profile-name"><%= user.name %></p>
<% end %>
