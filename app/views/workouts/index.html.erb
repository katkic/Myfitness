<div class="workouts-container">
  <h1 class="page-title"><%= @exercise.name %></h1>

  <nav>
    <ul class="content-nav">
      <li><%= link_to '戻る', menus_path, class: 'btn btn-outline-secondary' %></li>
      <li><%= link_to '新規作成', new_workout_path(exercise_id: @exercise.id), class: 'nav-link btn btn-primary text-white' %></li>
    </ul>
  </nav>

  <div class="workoutWrapper">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>日付</th>
          <th>セット</th>
          <th>最大重量</th>
          <th>1RM(MAX)</th>
          <th>合計重量</th>
          <th colspan="2">(kg)</th>
        </tr>
      </thead>

      <tbody>
        <% @workouts.each do |workout| %>
          <tr>
            <td><%= link_to format_date(workout.created_at), workout_path(workout) %>
            <td class="text-center"><%= Workout.get_set(workout.exercise_logs) %></td>
            <td class="text-right pr-4"><%= Workout.get_max_weight(workout.exercise_logs) %></td>
            <td class="text-right pr-5"><%= Workout.get_one_rm_max(workout.exercise_logs) %></td>
            <td class="text-right pr-5"><%= Workout.get_total_weight(workout.exercise_logs) %></td>
            <td><%= link_to '編集', edit_workout_path(workout), class: 'btn btn-success btn-sm text-white' %></td>
          </tr>
        <% end %><!-- /@worktous.each do |menu| -->
      </tbody>
    </table>
  </div><!-- /.workoutWrapper -->
</div><!-- /.col-6 mx-auto -->
