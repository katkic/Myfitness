<div class="col-6 mx-auto">
  <h1 class="my-3">トレーニング記録</h1>

  <h2><%= @exercise.name %></h2>

  <nav class="navbar navbar-expand-sm my-3">
    <ul class="navbar-nav">
      <li class="nav-item"><%= link_to '戻る', :back, class: 'nav-link btn btn-default' %></li>
      <li class="nav-item"><%= link_to 'グラフ', '#', class: 'nav-link btn btn-default' %></li>
      <li class="nav-item"><%= link_to '新規作成', new_workout_path, class: 'nav-link btn btn-primary text-white ml-5' %></li>
    </ul>
  </nav>

  <div class="workoutWrapper">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>日付</th>
          <th>セット</th>
          <th>最大重量</th>
          <th>1RM(MAX)</th>
          <th>合計重量</th>
        </tr>
      </thead>

      <tbody>
        <% @workouts.each do |workout| %>
            <tr>
              <td><%= link_to workout.created_at %></td>
              <td>3<%#= workout.exercise_logs.cout %></td>
              <td>52.5<%#= workout.exercise_logs.weight %></td>
              <td>68.2<%#= workout.exercise_logs.weight %></td>
              <td>1575.0<%#= workout.exercise_logs.weight %></td>
            </tr>
        <% end %><!-- /@worktous.each do |menu| -->
    </tr>
    </tbody>
    </table>
  </div><!-- /.workoutWrapper -->
</div><!-- /.col-6 mx-auto -->
