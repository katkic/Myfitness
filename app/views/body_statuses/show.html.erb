<div class="container">
  <h1 class="my-3">体重・体脂肪</h1>

  <nav class="navbar navbar-expand-sm my-3">
    <ul class="navbar-nav">
      <li class="nav-item"><%= link_to '一覧', body_statuses_path(@body_status), class: 'nav-link btn btn-default' %></li>
      <li class="nav-item"><%= link_to 'トレーニングメニュー', menus_path, class: 'nav-link btn btn-default' %></li>
    </ul>
  </nav>

  <table class="table table-hover">
    <tr>
      <th>日付</th>
      <td><%= @body_status.created_at.strftime("%Y-%m-%d %H:%M") %></td>
    </tr>
    <tr>
      <th>体重</th>
      <td><%= @body_status.body_weight %></td>
    </tr>
    <tr>
      <th>体脂肪</th>
      <td><%= @body_status.body_fat %></td>
    </tr>
  </table><!-- /.table table-hover -->

  <%= link_to '編集', edit_body_status_path(@body_status), class: 'btn btn-success text-white' %>
  <%= link_to '削除', body_status_path(@body_status), method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: 'btn btn-danger text-white' %>
</div><!-- /.container -->
