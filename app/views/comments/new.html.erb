<div class="post-container mt-3">
  <h1 class="page-title mb-3">コメント投稿</h1>
  <div class="nav-menu">
    <%= link_to '戻る', :back, class: 'btn btn-outline-secondary' %>
  </div><!-- /.nav-menu -->

  <%= render 'partial/post_content', post: @post %>

  <%= form_with model: [@post, @comment], local: true do |f| %>
    <% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comment.errors.count, '') %> 件のエラーがあります</h2>

        <ul>
          <% @comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div><!-- /#error_explanation -->
    <% end %>

    <div class="main-content">
      <div class="form-group">
        <div class="time-area">
          <%= Time.new.strftime('%Y-%m-%d %H:%M') %>
        </div><!-- /.time-area -->

        <div class="content-header">
          <p><%= image_tag 'default.png', alt: current_user.name, class: 'cover50' %></p>
          <div class="post-names">
            <p class="post-user"><%= current_user.name %></p>
          </div><!-- /.post-names -->
        </div><!-- /.content-header -->

        <!-- コメント入力エリア -->
        <%= f.text_area :content, class: 'form-control content-body', size: '0x7' %>
        <%= f.hidden_field :post_id, value: @post.id %>
      </div><!-- /.form-group -->
    </div><!-- /.new-content -->

    <div class="nav-menu">
      <%= link_to '戻る', :back, class: 'btn btn-outline-secondary' %>
      <%= f.submit '投稿する', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div><!-- /.post-container -->
